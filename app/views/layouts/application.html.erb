<!DOCTYPE html>
<html>
<head>
  <title>Awesome Online Store</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
<div class="container-narrow">

  <div class="masthead">
    <ul class="nav nav-pills pull-right">
      <li><%= link_to 'Home', store_path %></li>
      <li><a href="#">About</a></li>
      <li><a href="#">Contact</a></li>
      <% if logged_in? %>
          <li><%= link_to 'Orders', orders_path %></li>
          <li><%= link_to 'Logout', logout_path, method: :delete %></li>
      <% else %>
          <li><%= link_to 'Login', login_path %></li>
      <% end %>
    </ul>
    <h3 class="muted">Awesome Online Store</h3>
  </div>

  <hr>

  <div class="jumbotron">
    <div id="myCarousel" class="carousel slide">
      <!-- Carousel items -->
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag 'dlya-litsa-i-tela-maski-dlya-litsa-i-tela--foto-carousel.jpg' %>
        </div>
        <div class="item">
          <%= image_tag 'dlya-vann-morskaya-sol-mertvogo-morya--foto-carousel.jpg' %>
        </div>
        <div class="item">
          <%= image_tag 'dlya-vann-suhoe-molochko-dlya-vannyi--foto-carousel.jpg' %>
        </div>
      </div>
      <!-- Carousel nav -->
      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
  </div>

  <hr>

  <div class="row-fluid marketing">
    <div class="span12">
      <%= yield %>
    </div>

  </div>

  <hr>

  <div class="footer">
    <p>Â© Company 2013</p>
  </div>

</div>

</body>
</html>