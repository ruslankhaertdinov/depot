<!DOCTYPE html>
<html>
<head>
  <title>Awesome Online Store</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
<div class="card">
  <div id="empty_card_content">
    Ваша корзина пуста
  </div>
  <% if @cart %>
      <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
      <% end %>
  <% end %>
</div>

<div class="container-fluid">
  <div class="hero-unit">
    <div class="span3">
      <h4><%= link_to 'Super Online Store', store_path %></h4>
    </div>
    <div class="span3 phone">
      <h5> +7 (111) 222-333-444 </h5>
    </div>
    <div class="span6 top-menu">
      <ul class="nav nav-pills">
        <li><%= link_to 'Catalog', store_path %></li>
        <% if logged_in? %>
            <% if current_user_admin? %>
                <li><%= link_to 'Products', products_path %></li>
            <% end %>
            <li><%= link_to 'Orders', orders_path %></li>
            <li><%= link_to 'Logout', logout_path, method: :delete %></li>
        <% else %>
            <li><%= link_to 'Login', login_path %></li>
        <% end %>
        <li>
          <%= form_tag store_path, class: 'locale' do %>
              <%= select_tag 'set_locale',
                             options_for_select(LANGUAGES, I18n.locale.to_s),
                             class: 'span2',
                             onchange: 'this.form.submit()' %>
              <%= submit_tag 'submit' %>
              <%= javascript_tag "$('.locale input').hide()" %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<% if notice %>
    <div class="container-fluid">
      <div class="container-fluid alert fade in notice">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= notice %>
      </div>
    </div>
<% end %>

<%= yield %>

<hr>

<footer>
  <p>© Company 2013</p>
</footer>

</body>
</html>