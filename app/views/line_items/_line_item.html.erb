<% if line_item == @current_item %>
    <tr id="current_item" class="line_item">
<% else %>
    <tr class="line_item">
<% end %>

<td>
  <%= link_to '<i class="icon-minus-sign icon-white edit-item"></i>'.html_safe,
              decrease_line_items_path(product_id: line_item.product_id),
              remote: true
  %>
  <span class="quantity">
    <%= line_item.quantity %>
  </span>
  <%= link_to '<i class="icon-plus-sign icon-white edit-item"></i>'.html_safe,
              '#',
              class: 'increase-item'
  %>
</td>

<td>
  <span class="title">
    <%= line_item.product.title %>
    (<%= formatted_currency(line_item.product.price) %>)
  </span>
</td>
<td class="item_price"><%= formatted_currency(line_item.total_price) %></td>

<%= form_tag "/en/line_items?product_id=#{line_item.product_id}", remote: true, class: 'form-increase' do %>
<% end %>
</tr>
