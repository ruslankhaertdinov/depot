<div class="container">
  <% if alert %>
      <p id="notice" class="alert"><%= alert %></p>
  <% end %>
  <%= form_tag do %>
      <fieldset>
        <legend>Please Log In</legend>
        <div>
          <%= text_field_tag :name, params[:name], placeholder: 'Name' %>
        </div>
        <div>
          <%= password_field_tag :password, params[:password], placeholder: 'Password' %>
        </div>
        <div>
          <%= submit_tag "Sign in", class: 'btn btn-primary' %>
          <span>&nbsp;</span>
          <%= link_to "Sign up", new_user_url %>
        </div>
      </fieldset>
  <% end %>
</div>
