<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div class="jumbotron">
  <div id="myCarousel" class="carousel slide">
    <!-- Carousel items -->
    <div class="carousel-inner">
      <% @products.each do |product| %>
          <div class="item
            <%= product == @products.first ? 'active' : '' %>">
            <%= link_to (image_tag product.image_url), product_path(product) %>
            <div class="carousel-caption">
              <h3>
                <%= link_to product.title, product_path(product) %>
              </h3>
            </div>
          </div>
      <% end %>

    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
  </div>
</div>
<h1><%= t('.title_html') %></h1>

<% @products.each do |product| %>
    <div class="span3">
      <div class="entry">
        <div class="thumbnail">
          <%= link_to (image_tag(product.image_url, class: 'img-polaroid', size: "225x150")), product_path(product) %>
          <%#= sanitize(product.description) %>

          <div class="caption">
            <h4><%= link_to "#{product.title}", product_path(product) %></h4>

            <div class="price_line">
              <span class="price"><%= number_to_currency(product.price) %></span>
              <%= button_to t('.add_html'), line_items_path(product_id: product), remote: true %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
