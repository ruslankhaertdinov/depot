<div class="row">
  <ul class="thumbnails">
    <div class="span12">
      <%= render 'bread_crumb' %>
    </div>
    <% products.each do |product| %>
        <li class="span3">
          <div class="thumbnail product">
            <%= link_to (image_tag product.image_url), product_path(product) %>
            <div class="caption">
              <h5><%= link_to product.title, product_path(product) %></h5>
              <p> Цена: $<%= product.price %></p>
              <%= button_to t('.add_html'), line_items_path(product_id: product), remote: true, class: 'btn btn-mini btn-primary btn_add_product' %>
            </div>
          </div>
        </li>
    <% end %>
  </ul>
</div>
