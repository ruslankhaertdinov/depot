<%= form_for @product, html: {class: 'form-horizontal'} do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label :title, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, size: 40, placeholder: 'Title of the product' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :category, class: 'control-label' %>
      <div class="controls">
        <%= f.select :category_id, Category.all.map { |c| [c.title, c.id] } %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, class: 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, rows: 6, placeholder: 'Please describe the product' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :image_url, 'Image', class: 'control-label' %>
      <div class="controls">
        <%= f.file_field :image_url %>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :price, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :price %>
      </div>
    </div>

    <div class="form-actions">
      <%= button_tag 'Submit', class: 'btn btn-primary' %>
    </div>
<% end %>
