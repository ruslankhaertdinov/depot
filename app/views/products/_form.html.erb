<%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :category %>
      <%= f.select :category_id, Category.all.map { |c| [c.title, c.id] }, {:include_blank => true} %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 6 %>
    </div>
    <div>
      <%= f.label :image_url %>
      <%= f.file_field :image_url %>
    </div>
    <div>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
