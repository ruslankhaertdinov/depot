<% if flash[:notice] %>
    <p id="notice"><%= notice %></p>
<% end %>
<p>
  <%= image_tag(@product.image_url) %>
</p>
<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>


<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<% if current_user_admin? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
<%= link_to 'Back', :back %>
