<div class="container">
  <p>
    <%= image_tag(@product.image_url) %>
  </p>

  <p>
    <b>Title:</b>
    <%= @product.title %>
  </p>

  <p>
    <b>Category:</b>
    <%= @product.category.title %>
  </p>

  <p>
    <b>Description:</b>
    <%= @product.description %>
  </p>

  <p>
    <b>Price:</b>
    <%= @product.price %>
  </p>

  <%= link_to 'Back', :back %>
  <% if current_user_admin? %>
      | <%= link_to 'Edit', edit_product_path(@product) %>
  <% end %>
</div>